<%= render :partial => 'partials/header'%>
<!-- main menu-->
<%= render :partial => 'partials/sidebar'%>
<!-- / main menu-->
<div class="app-content content container-fluid">
   <div class="content-wrapper">
      <div class="content-body">
         <!-- Basic form layout section start -->
         <section id="basic-form-layouts">
            <div class="match-height">
               <div class="card p-0">
                  <div class="card-header">
                     <h4 class="card-title" id="basic-layout-tooltip">Edit Client</h4>
                     <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                     <div class="heading-elements">
                        <ul class="list-inline mb-0">
                           <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                           <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                           <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                        </ul>
                     </div>
                  </div>
                  <div class="card-body collapse in">
                     <div class="card-block">
                        <%= form_with model: @client do |form| %>
                        <div class="form-body">
                           <div class="form-group">
                              <label>Company Name</label>
                              <input type="text" class="form-control" placeholder="Company Name" name="client[company_name]" value="<%= @client.company_name %>" >
                              <% @client.errors.full_messages_for(:company_name).each do |message| %>
                                <div class="text-danger"><%= message %></div>
                              <% end %>
                           </div>
                           <div class="form-group">
                              <label>Billing Address</label>
                              <textarea rows="5" class="form-control" name="client[billing_address]" placeholder="Billing Address" ><%= @client.billing_address %></textarea>
                              <% @client.errors.full_messages_for(:billing_address).each do |message| %>
                                <div class="text-danger"><%= message %></div>
                              <% end %>
                           </div>
                           <div class="form-group">
                              <label>Phone Number</label>
                              <input type="text" class="form-control" placeholder="Phone Number" name="client[phone_number]" value="<%= @client.phone_number %>" >
                              <% @client.errors.full_messages_for(:phone_number).each do |message| %>
                                <div class="text-danger"><%= message %></div>
                              <% end %>
                           </div>
                           
                           <div class="form-actions">
                              <button type="submit" class="btn btn-primary">
                              <i class="icon-check2"></i> Save
                              </button>
                           </div>
                        </div>
                        <% end %>
                     </div>
                  </div>
               </div>
            </div>
         </section>
         <!-- // Basic form layout section end -->
      </div>
   </div>
</div>