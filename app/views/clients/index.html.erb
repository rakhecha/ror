<% content_for :title do %>
    Clients
<% end %>
<%= render :partial => 'partials/header'%>
<!-- main menu-->
<%= render :partial => 'partials/sidebar'%>
<!-- / main menu-->
<div class="app-content content container-fluid">
   <div class="content-wrapper">
      <div class="content-body">
         <!-- Basic form layout section start -->
         <section id="basic-form-layouts">
            <div class="match-height">
               <div class="card p-0">
                  <div class="card-header">
                     <h4 class="card-title">All Clients</h4>
                     <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                     <div class="heading-elements">
                        <ul class="list-inline mb-0">
                           <li><a href="/clients/new"><button type="button" class="btn btn-primary">+New Client</button></a></li>
                           <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                           <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                           <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                        </ul>
                     </div>
                  </div>
                  <div class="card-body collapse in">
                  
                     <div class="card-block">
                     <% if notice.present?  %>
                        <div class="alert alert-success" role="alert">
                            <%= notice %>
                        </div>
                    <% end %>
                        <div class="table-responsive">
                        
                           <table class="table">
                              <thead class="thead-inverse">
                                 <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th width="20%">Billing Address</th>
                                    <th width="20%">Phone Number</th>
                                    <th class="list_action01">Action</th>
                                 </tr>
                              </thead>
                              <tbody>

                                <% @clients.each_with_index do |client, key| %>
                                    <tr>
                                        <td><%= key+1 %></td>
                                        <td><%= client.company_name %></td>
                                        <td><%= client.billing_address %></td>
                                        <td><%= client.phone_number %></td>
                                        <td class="list_action01">
                                            
                                            <a href="<%= edit_client_path(client) %>"><button type="button" class="btn btn-warning">Edit</button></a>
                                            
                                            <a href="/client/delete/<%= client.id %>" onclick="return confirm('Are you sure?')"><button type="button" class="btn btn-danger" >Delete</button></a>
                                        </td>
                                    </tr>
                                <% end %>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </section>
      </div>
   </div>
</div>